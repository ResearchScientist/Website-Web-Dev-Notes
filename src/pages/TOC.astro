// Get all markdown files
const foundNotes = import.meta.glob('./notes/**/*.md', { eager: true });
const allNotes = Object.values(foundNotes);
console.log(allNotes.length);

// allNotes.forEach(note => {
//   console.log(note.frontmatter.section);
// });

// Get all unique sections from the notes
const uniqueSection = [...new Set(allNotes.map(note => note.frontmatter.section))];
console.log(uniqueSection,uniqueSection.length);

// Group notes by section
const notesBySection = allNotes.reduce((acc, note) => {
  const { section } = note.frontmatter;
  if (!acc[section]) {
    acc[section] = [];
  }
  acc[section].push(note);
  return acc;
}, {});

// display notesBySection object and all its properties as a string
const notesBySectionString = JSON.stringify(notesBySection, null, 2);

// Sort sections based on their appearance in uniqueSections
const sortedSections = uniqueSection.map(section => {
  return {
    name: section,
    notes: (notesBySection[section] || []).sort((a, b) => {
      // Sort by file path
      return a.file.localeCompare(b.file);
    })
  };
});

console.log(sortedSections);

// Format chapter name for display
const formatChapterName = (name) => {
  return name
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
};
---

<MainLayout>
  <div class="container">
    <h1>All Notes</h1>
    <p>Browse through all available notes organized by chapter.</p>
    
    <div class="toc">
      {sortedSections.map(section => (
        <div class="chapter">
          <h2>{formatChapterName(section.name)}</h2>
          <ul>
            {section.notes.map(note => (
              <li>
                <a href={note.url}>
                  {note.frontmatter.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="back-link">
      <a href="/" class="button">Back to Home</a>
    </div>
  </div>
</Layout>

