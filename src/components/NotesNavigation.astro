---
const { page } = Astro.props;
const currentNote = page.data[0];
---

<h1>{currentNote.frontmatter.title}</h1>
<p>this url</p>
<p>{Astro.url}</p>
<!-- <p>{page.url.current}</p> -->

<p>Total Notes: {page.lastPage}</p>

<!-- <p>{allNotesArray.length}</p> -->

<nav id="notes-navigation">
    <!-- <a href={prevUrl}>Previous Note</a> -->
    <!-- <a href={nextUrl}>Next Note</a> -->
</nav>

<style>
    #notes-navigation {
        height: 100px;
        margin: 100px auto 0;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid var(--page-colour-accent);
    }

    #notes-navigation a {
        padding: 14px;
        border-radius: 5px;
        border: 1px solid var(--primary-colour);
    }

    #notes-navigation a:hover {
        background-color: var(--page-colour-hover);
    }
</style>

