---
const { prevNote, nextNote } = Astro.props;
---

<p>this url</p>
<p>{Astro.url}</p>

<nav id="notes-navigation">
    {prevNote && (
        <a href={prevNote.url} class="nav-button prev-button">
            &larr; Previous: {prevNote.frontmatter.title}
        </a>
    )}
    {nextNote && (
        <a href={nextNote.url} class="nav-button next-button">
            Next: {nextNote.frontmatter.title} &rarr;
        </a>
    )}
</nav>

<!-- <nav id="notes-navigation">
    <a href={prevNote.url}>Previous Note</a>
    <a href={nextNote.url}>Next Note</a> -->
</nav>

<style>
    #notes-navigation {
        height: 100px;
        margin: 100px auto 0;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid var(--page-colour-accent);
    }

    #notes-navigation a {
        padding: 14px;
        border-radius: 5px;
        border: 1px solid var(--primary-colour);
    }

    #notes-navigation a:hover {
        background-color: var(--page-colour-hover);
    }
</style>

