---
const { prevNote, nextNote } = Astro.props;
console.log('the notes nav props are ', {prevNote} ,{nextNote});
---

<p>notes navigation</p>
<p>{prevNote}</p>

<p>prevNote: {JSON.stringify(prevNote)}</p>
<p>nextNote: {JSON.stringify(nextNote)}</p>

<nav id="notes-navigation">
    {prevNote && (
        <a href={prevNote.url}>
            &larr; Previous: {prevNote.frontmatter.title}
        </a>
    )}
    {nextNote && (
        <a href={nextNote.url} class="nav-button next-button">
            Next: {nextNote.frontmatter.title} &rarr;
        </a>
    )}
</nav>

